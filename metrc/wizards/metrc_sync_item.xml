<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="metrc_sync_item_wizard_form" model="ir.ui.view">
        <field name="name">metrc.sync.item.wizard.form</field>
        <field name="model">metrc.sync.item</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="product_id" readonly="True"/>
                    <field name="all_facilities"/>
                    <field name="facility_ids"/>
                </group>
                <footer>
                    <button name="submit_sync" string="Submit" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>