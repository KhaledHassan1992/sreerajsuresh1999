<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="package_split_wizard_form" model="ir.ui.view">
        <field name="name">metrc.package.split.wizard.form</field>
        <field name="model">metrc.package.split</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="package_id" readonly="True"/>
                    <field name="warehouse_id" readonly="True"/>
                    <field name="facility_id" readonly="True"/>
                    <field name="qty"/>
                    <field name="uom" readonly="True"/>
                    <field name="starting_tag"/>
                    <field name="splits"/>
                    <field name="patient_license"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="submit_split" string="Submit" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>